function conf = read_confusion(filename)
% read the confusion matrix from csv file
%
% Zhenhao (Roger) Ge, 2015-08-26

M = csvread(filename);

group_length = max(M(:,1));
ngram = max(M(:,2));
num_set = size(M,2)-2;
confusion = zeros(ngram, group_length, num_set);

for i = 1:ngram
    for j = 1:group_length
        confusion(i,j,:) = M()
    end
end
